def print_status(message, status="INFO"):
    """Print status message."""
    symbols = {"INFO": "â„¹ï¸", "SUCCESS": "âœ…", "ERROR": "âŒ", "WARNING": "âš ï¸"}
    print(f"{symbols.get(status, 'â„¹ï¸')} {message}")


def demo_log_generation():
