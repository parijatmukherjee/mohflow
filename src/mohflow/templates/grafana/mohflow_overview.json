{
  "dashboard": {
    "id": null,
    "title": "MohFlow - Overview Dashboard",
    "tags": ["mohflow", "logging", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "2d",
        "7d",
        "30d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "query": "label_values(service)",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "environment",
          "type": "query", 
          "label": "Environment",
          "query": "label_values(environment)",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "level",
          "type": "query",
          "label": "Log Level",
          "query": "label_values(level)",
          "refresh": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Log Volume Over Time",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\"$service\", environment=~\"$environment\", level=~\"$level\"}[1m])) by (level)",
            "legendFormat": "{{level}}",
            "refId": "A"
          }
        ],
        "xAxis": {
          "show": true,
          "mode": "time"
        },
        "yAxes": [
          {
            "label": "Logs per second",
            "show": true
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "rightSide": false
        }
      },
      {
        "id": 2,
        "title": "Log Level Distribution",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum by (level) (count_over_time({service=~\"$service\", environment=~\"$environment\", level=~\"$level\"}[1h]))",
            "legendFormat": "{{level}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["percent"]
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\"$service\", environment=~\"$environment\", level=\"ERROR\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Warning Rate",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\"$service\", environment=~\"$environment\", level=\"WARNING\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "orange",
                  "value": 2
                }
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 5,
        "title": "Active Services",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "count(count by (service) ({service=~\"$service\", environment=~\"$environment\"} [5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Total Log Volume (1h)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(count_over_time({service=~\"$service\", environment=~\"$environment\", level=~\"$level\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Top Services by Log Volume",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "topk(10, sum by (service) (rate({service=~\"$service\", environment=~\"$environment\"}[5m])))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 8,
        "title": "Recent Error Messages",
        "type": "logs",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "{service=~\"$service\", environment=~\"$environment\", level=\"ERROR\"} |= ``",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending",
          "wrapLogMessage": true
        }
      },
      {
        "id": 9,
        "title": "Log Volume by Environment",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\"$service\", environment=~\"$environment\", level=~\"$level\"}[1m])) by (environment)",
            "legendFormat": "{{environment}}",
            "refId": "A"
          }
        ],
        "xAxis": {
          "show": true,
          "mode": "time"
        },
        "yAxes": [
          {
            "label": "Logs per second",
            "show": true
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "rightSide": false
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
}